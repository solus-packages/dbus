    <Source>
        <Name>dbus</Name>
        <Packager>
            <Name>Ikey Doherty</Name>
            <Email>ikey@evolve-os.com</Email>
        </Packager>
        <Summary>System Message Daemon</Summary>
        <Description>D-Bus is a message bus system, a simple way for applications to talk to one another. D-Bus supplies both a system daemon (for events such as “new hardware device added” or “printer queue changed”) and a per-user-login-session daemon (for general IPC needs among user applications). Also, the message bus is built on top of a general one-to-one message passing framework, which can be used by any two applications to communicate directly (without going through the message bus daemon).</Description>
        <License>GPLv3+</License>
        <Archive sha1sum="86f87cf42f6b9f976ddd9eef8de925ff3d3c0191" type="targz">https://dbus.freedesktop.org/releases/dbus/dbus-1.10.8.tar.gz</Archive>

        <BuildDependencies>
            <Dependency>systemd-devel</Dependency>
            <Dependency>baselayout</Dependency>
            <Dependency type="pkgconfig">x11</Dependency>
            <Dependency type="pkgconfig32">x11</Dependency>
            <Dependency type="pkgconfig">libudev</Dependency>
            <Dependency type="pkgconfig32">libudev</Dependency>
            <Dependency type="pkgconfig32">expat</Dependency>
            <Dependency type="pkgconfig32">liblzma</Dependency>
            <Dependency>glibc-32bit-devel</Dependency>
            <Dependency>glibc-32bit</Dependency>
            <Dependency>libgcrypt-32bit-devel</Dependency>
        </BuildDependencies>

        <Patches>
            <Patch level="1">no-fatal-warnings.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>dbus</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/lib/dbus-1.0/dbus-daemon-launch-helper</Path>
            <Path fileType="config">/etc</Path>
            <Path fileType="library">/usr/lib/libdbus*</Path>
            <Path fileType="data">/usr/share/dbus-1</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>

            <Path fileType="data">/usr/lib/systemd/system</Path>
            <Path fileType="data">/usr/lib/systemd/user/</Path>
            <Path fileType="data">/var</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency releaseFrom="3">systemd</Dependency>
            <Dependency releaseFrom="7">baselayout</Dependency>
        </RuntimeDependencies>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>dbus-32bit</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Summary>32-bit files for dbus</Summary>
        <Description>32-bit files for dbus</Description>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so.*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">dbus</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>dbus-devel</Name>
        <Summary>Development files for D-Bus</Summary>
        <Description>Development files required to build applications using D-Bus</Description>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="header">/usr/lib/dbus-1.0/include/</Path>
            <Path fileType="header">/usr/lib/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">dbus</Dependency>
        </RuntimeDependencies>
        <PartOf>system.devel</PartOf>
    </Package>

    <Package>
        <Name>dbus-32bit-devel</Name>
        <BuildType>emul32</BuildType>
        <PartOf>programming.library</PartOf>
        <Summary>32-bit Development files for D-Bus</Summary>
        <Description>32-bit Development files required to build applications using D-Bus</Description>
        <Files>
            <Path fileType="header">/usr/lib32/dbus-1.0/include/</Path>
            <Path fileType="header">/usr/lib32/pkgconfig</Path>
            <Path fileType="library">/usr/lib32/lib*.so</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">dbus</Dependency>
        </RuntimeDependencies>
        <PartOf>system.devel</PartOf>
    </Package>


